@*_NewSupplierForm.cshtml*@ 

@using ControllRR.Domain.Enums
@model ControllRR.Application.Dto.SupplierDto;

<form asp-controller="Suppliers" asp-action="CreateNewSupplier" method="post">
    <input type="hidden" id="supplierId" name="SupplierId" />
    <div class="row">
    
    <div class="form-group">
        <label>Buscar Fornecedor:</label>
        <input asp-for="Name" class="form-control" 
               id="supplierSearch" 
               placeholder="Digite nome, CNPJ ou email...">
    </div>

    <div class="form-group">
        <label asp-for="CNPJ"></label>
        <input asp-for="CNPJ" class="form-control cnpj-mask" id="supplierCNPJ">
    </div>
    <div class="form-group col-md-4">
    <label asp-for="ContactEmail"></label>
    <input asp-for="ContactEmail" class="form-control input-sm" id="supplierContactEmail" />
    <span asp-validation-for="ContactEmail" class="text-danger"></span>
    </div> 
    <div class="form-group col-md-4">
    <label asp-for="PhoneNumber"></label>
    <input asp-for="PhoneNumber" class="form-control input-sm" id="supplierPhoneNumber"/>
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div> 
    <div class="form-group col-md-4">
    <label asp-for="CRT"></label>
    <input asp-for="CRT" class="form-control input-sm" id="supplierCRT"/>
    <span asp-validation-for="CRT" class="text-danger"></span>
    </div> 
     <div class="form-group col-md-4">
    <label asp-for="IssuerIE"></label>
    <input asp-for="IssuerIE" class="form-control input-sm" id="supplierIssuerIE"/>
    <span asp-validation-for="IssuerIE" class="text-danger"></span>
    </div> 
     <div class="form-group col-md-4">
    <label asp-for="ActivityArea"></label>
    <input asp-for="ActivityArea" class="form-control input-sm" id="supplierActivityArea"/>
    <span asp-validation-for="IssuerIE" class="text-danger"></span>
    </div> 
     <div class="col">
     <label asp-for="PersonType" class="control-label"></label>
    <select asp-for="PersonType" class="form-control" asp-items="@Html.GetEnumSelectList<PersonType>()"></select>
    </div>
    <div class="form-group col-md-4">
    <label asp-for="Address"></label>
    <input asp-for="Address" class="form-control input-sm" id="supplierAddress"/>
    <span asp-validation-for="Address" class="text-danger"></span>
    </div> 
   
    </div>
    <div class="mt-4">
    <button type="submit" class="btn btn-success">Salvar</button>
    </div>
</form>