@*/views/maintenance/partials/_ListPartial.cshtml*@
@model ControllRR.Application.Dto.MaintenanceDto;
@{

    ViewData["Title"] = "Listagem de Manutenções por Dispositivos";
}

@if (TempData["MaintenanceSucessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
    @TempData["MaintenanceSucessMessage"]
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
}
@if (TempData["MaintenanceErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
    @TempData["MaintenanceErrorMessage"]
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
}
<div class="container-fluid px-4">
    <h1 class="mt-4"></h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/Maintenances/MaintenanceList">Manutenções</a></li>
        <li class="breadcrumb-item active">Filtrar</li>
        
    </ol>
    <a class="btn btn-sm btn-success" href="/Maintenances/New" onclick="displayBusyIndicator()"><span class="fa fa-plus"></span> Inserir Manutenção </a>
</div>
<hr> 

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            Data:: -- Consulta Manutenções por Dispositivos / Computadores / Impressoras / Tablets
            
        </div>
         @await Html.PartialAsync("Partials/_LoadingPartial")

        <div class="row">
            <div class="col-md-12">
                <br>
                <div class="container-fluid">
                    <div class="table-responsive">
                        <table id="deviceTable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Descrição</th>
                                    <th>Nº Serie</th>
                                    <th>Modelo</th>
                                    <th># OS</th>
                                    <th>Usuario</th>
                                    <th>ações Disponiveis</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                            @await Html.PartialAsync("Partials/_LoadingPartial")
                        </table>
                    </div>
                </div>
            </div>
        </div>
      